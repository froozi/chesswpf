        <Button x:Name="KnightW1" Grid.Column="1" Grid.Row="7" Background="#FFFFFF" Click="Button_Click" Width="100" Height="100"/>
        <Button Grid.Column="0" Grid.Row="1" Background="#000000" Click="Button_Click" x:Name="PawnB1" Width="100" Height="100"/>
        <Button Grid.Column="0" Grid.Row="0" Background="#FFFFFF" Click="Button_Click" x:Name="RookB1" Height="100" Width="100"/>
