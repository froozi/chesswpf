        <Button Grid.Column="7" Grid.Row="5" Background="#FFFFFF" Click="Button_Click" Width="100" Height="100"/>

        <Button Grid.Column="1" Grid.Row="0" Click="Button_Click" x:Name="KnightB1" Background="#000000" Width="100" Height="100"/>
        <Button Grid.Column="2" Grid.Row="0" Background="#FFFFFF" Click="Button_Click" x:Name="BishopB1" Width="100" Height="100"/>
