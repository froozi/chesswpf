        <Button Grid.Column="5" Grid.Row="4" Background="#000000" Click="Button_Click" Width="100" Height="100"/>
        <Button Grid.Column="6" Grid.Row="4" Background="#FFFFFF" Click="Button_Click" Width="100" Height="100"/>
        <Button Grid.Column="8" Grid.Row="4" Background="#000000" Click="Button_Click" Width="100" Height="100"/>
