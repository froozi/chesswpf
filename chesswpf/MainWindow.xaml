        <Button x:Name="PawnW1" Grid.Column="0" Grid.Row="6" Background="#FFFFFF" Click="Button_Click" Width="100" Height="100"/>
        <Button Grid.Column="0" Grid.Row="7" Background="#000000" x:Name="RookW1" Click="Button_Click" Width="100" Height="100"/>
        <Button x:Name="RookW2" Grid.Column="7" Grid.Row="7" Background="#FFFFFF" Click="Button_Click" Width="100" Height="100"/>
        <Button x:Name="KnightW2" Grid.Column="6" Grid.Row="7" Background="#000000" Click="Button_Click" Width="100" Height="100"/>
        <Button x:Name="BishopW2" Grid.Column="5" Grid.Row="7" Background="#FFFFFF" Click="Button_Click" Width="100" Height="100"/>
        <Button x:Name="KingW0" Grid.Column="4" Grid.Row="7" Background="#000000" Click="Button_Click" Width="100" Height="100"/>
        <Button x:Name="QueenW0" Grid.Column="3" Grid.Row="7" Background="#FFFFFF" Click="Button_Click" Width="100" Height="100"/>
        <Button x:Name="BishopW1" Grid.Column="2" Grid.Row="7" Background="#000000" Click="Button_Click" Width="100" Height="100"/>
        <Button x:Name="PawnW8" Grid.Column="7" Grid.Row="6" Background="#000000" Click="Button_Click" Width="100" Height="100"/>
