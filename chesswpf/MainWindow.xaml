        <Button Grid.Column="3" Grid.Row="5" Background="#FFFFFF" Click="Button_Click" Width="100" Height="100"/>
        <Button Grid.Column="4" Grid.Row="5" Background="#000000" Click="Button_Click" Width="100" Height="100"/>
        <Button Grid.Column="5" Grid.Row="5" Background="#FFFFFF" Click="Button_Click" Width="100" Height="100"/>
